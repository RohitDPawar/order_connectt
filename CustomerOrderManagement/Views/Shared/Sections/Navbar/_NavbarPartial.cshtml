<script>
    function GetNotificationList()
    {
      $.ajax({
            type: "POST",
            url: "/OrderMaster/GetAllNotifications",
            data: {
                Flag: "1",
            },
            success: function (data)
            {
              var Res =  JSON.parse(data);
              console.log(Res["Notification"])

              var MessageData = "";
              $("#MessageId").empty();
              for(var i=0;i<Res["Notification"].length;i++)
              {
                 MessageData +='<h6 class="mb-1 small">New Message ✉️</h6><small class="mb-1 d-block text-body">'+Res["Notification"][i]["notification"]+'</small><hr></hr>';
              }
              $("#MessageId").append(MessageData);
            },
       });
    }

    function ClearNotification()
    {
      $.ajax({
            type: "POST",
            url: "/OrderMaster/GetAllNotifications",
            data: {
                Flag: "2",
            },
            success: function (data)
            {
              $("#MessageId").empty();
            },
       });
    }
</script>
