                    + '<td>' + res["OrderData"][i]["item_name"] + '</td>'
                    + '<td>' + res["OrderData"][i]["category_name"] + '</td>'
                    + '<td>' + (parseFloat(res["OrderData"][i]["gross_wt"])?.toFixed(3) || '') + '</td>'
                    + '<td>' + (parseFloat(res["OrderData"][i]["net_wt"])?.toFixed(3) || '') + '</td>'
